{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .bd-example {
        position: relative;
        padding: 1.5rem;
        margin-right: 0;
        margin-left: 0;
    }
</style>

    <div class="bd-example">

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>

            <div class="form-group">
                {{form_label(registrationForm.email, 'Email')}}
                {{form_widget(registrationForm.email, {'attr': {'class': 'form-control'}})}}
                {{form_errors(registrationForm.email)}}
            </div>
            <div class="form-group">
                {{form_label(registrationForm.plainPassword, 'Password')}}
                {{form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}})}}
                {{form_errors(registrationForm.plainPassword)}}
            </div>
            <div class="form-group form-check">
                {{form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input', 'display': 'contents!important'}})}}
                {{form_label(registrationForm.agreeTerms, 'Agree to terms', {'label_attr': {'class': 'form-check-label'}})}}
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
            </div>
    {{ form_end(registrationForm) }}

    <div class="mt-2 text-center text-grey-600 dark:text-gray-400">
        Already have an account? <a href="{{ path('app_login') }}">Login here</a>
    </div>
{% endblock %}
