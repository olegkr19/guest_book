<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <!-- Bootstrap CSS -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

        <title>{% block title %}Guestbook{% endblock %}</title>
        <div>
            <h1 style="text-align: center;">Guestbook   </h1>
            <div class="text-4xl ml-4">
                <a href="{{ path('message_list') }}">Home</a>   
            </div>

            <div class="text-right">
                <div class="text-sm text-gray-500 dark:text-gray-400 flex">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="mr-4">
                        <a href="{{ path('app_micro_post_add') }}">Add New</a>
                    </div>
                    <div class="mr-4">
                        <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                    {% else %}
                    <div class="mr-4">
                        <a href="{{ path('app_login') }}">Login</a>
                    </div>
                    <div class="mr-4">
                        <a href="{{ path('app_register') }}">Register</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div style="color: green">{{ message }}</div>
        {% endfor %}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
